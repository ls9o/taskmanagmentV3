{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "baseUrl": "./",
    "moduleResolution": "node",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ],
    "strict": true,
    "noEmit": true
  },
  "include": [
    "src/**/*",
    "src/vue-shims.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
